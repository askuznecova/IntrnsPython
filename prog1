def piecewise_function(x):
    if x < 0:
        return "Функция не определена для x < 0"
        elif 0 <= x < 2:
            #Первый отрезок прямой с угловым коэффициентом 1, y = x
            return x
            else:
                #Второй отрезок прямой, горизонтальный, y = 2
                return 2
                #Предположим, что нам надо найти значение функции при x = 1.5
                x_value = 1.5
                #Замените это значение на нужное нам вам для вычисления 
                result = piecewise_function(x_value)
                print(f"Значение функции при x = {x_value} равно {result}")
